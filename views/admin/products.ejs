<%- include('../partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Manage Products</h1>
            <a href="/admin/products/add" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Product
            </a>
        </div>
        
        <% if (products.length === 0) { %>
            <p>No products found. Add your first product!</p>
        <% } else { %>
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Length</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <img src="<%= product.image_url %>" alt="<%= product.name %>" class="table-image" onerror="this.src='/uploads/placeholder.jpg'">
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.hair_type %></td>
                            <td><%= product.length %></td>
                            <td>â‚¦<%= Number(product.price).toLocaleString() %></td>
                            <td>
                                <span class="<%= product.stock_quantity > 10 ? 'text-success' : product.stock_quantity > 0 ? 'text-warning' : 'text-danger' %>">
                                    <%= product.stock_quantity %>
                                </span>
                            </td>
                            <td class="table-actions">
                                <a href="/admin/products/edit/<%= product.id %>" class="btn btn-sm btn-info">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/admin/products/delete/<%= product.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this product?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</main>

<%- include('../partials/footer') %>